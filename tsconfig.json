{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./backend/dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules"]
}
